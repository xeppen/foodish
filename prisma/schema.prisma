// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Complexity {
  SIMPLE
  MEDIUM
  COMPLEX
}

enum Weekday {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

enum GenerationStatus {
  PENDING
  READY
  FAILED
}

// Application models
// Note: userId is the Clerk user ID (string)
model Meal {
  id              String         @id @default(cuid())
  name            String
  userId          String // Clerk user ID
  complexity      Complexity     @default(MEDIUM)
  thumbsUpCount   Int            @default(0)
  thumbsDownCount Int            @default(0)
  imageUrl        String?
  imagePrompt     String?
  tags            Json?
  ingredients     Json?
  preferredDays   Weekday[]       @default([])
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  usageHistory    UsageHistory[]
  daySignals      MealDaySignal[]

  @@index([userId])
  @@index([userId, complexity])
}

model CommonMeal {
  id        String     @id @default(cuid())
  name      String     @unique
  complexity Complexity @default(MEDIUM)
  imageUrl  String?
  sortOrder Int        @default(0)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([sortOrder])
}

model WeeklyPlan {
  id            String   @id @default(cuid())
  userId        String // Clerk user ID
  weekStartDate DateTime
  monday        String?
  tuesday       String?
  wednesday     String?
  thursday      String?
  friday        String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([userId, weekStartDate])
  @@index([userId])
}

model UsageHistory {
  id            String   @id @default(cuid())
  meal          Meal     @relation(fields: [mealId], references: [id], onDelete: Cascade)
  mealId        String
  userId        String
  usedDate      DateTime @default(now())
  weekStartDate DateTime
  day           Weekday?
  createdAt     DateTime @default(now())

  @@index([userId, usedDate])
  @@index([mealId])
}

model MealDaySignal {
  id               String   @id @default(cuid())
  meal             Meal     @relation(fields: [mealId], references: [id], onDelete: Cascade)
  mealId           String
  userId           String
  day              Weekday
  shownCount       Int      @default(0)
  swappedAwayCount Int      @default(0)
  selectedCount    Int      @default(0)
  lastShownAt      DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([mealId, userId, day])
  @@index([userId, day])
  @@index([mealId])
}

model GeneratedDishImage {
  id                 String           @id @default(cuid())
  normalizedName     String           @unique
  canonicalName      String
  originalName       String
  imageUrl           String?
  generationPrompt   String?
  generationVersion  String           @default("v1")
  generationModel    String?
  status             GenerationStatus @default(PENDING)
  errorCode          String?
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt

  @@index([status])
}
