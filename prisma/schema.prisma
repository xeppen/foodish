// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Complexity {
  SIMPLE
  MEDIUM
  COMPLEX
}

enum Weekday {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

enum GenerationStatus {
  PENDING
  READY
  FAILED
}

// Application models
// Note: userId is the Clerk user ID (string)
model Meal {
  id              String         @id @default(cuid())
  name            String
  userId          String // Clerk user ID
  complexity      Complexity     @default(MEDIUM)
  thumbsUpCount   Int            @default(0)
  thumbsDownCount Int            @default(0)
  imageUrl        String?
  imagePrompt     String?
  tags            Json?
  ingredients     Json?
  defaultServings Int            @default(4)
  preferredDays   Weekday[]       @default([])
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  usageHistory    UsageHistory[]
  mealHistory     MealHistory[]
  daySignals      MealDaySignal[]
  mealIngredients MealIngredient[]
  planEntries     WeeklyPlanEntry[]

  @@index([userId])
  @@index([userId, complexity])
}

model CommonMeal {
  id        String     @id @default(cuid())
  name      String     @unique
  complexity Complexity @default(MEDIUM)
  imageUrl  String?
  sortOrder Int        @default(0)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([sortOrder])
}

model WeeklyPlan {
  id            String   @id @default(cuid())
  userId        String // Clerk user ID
  weekStartDate DateTime
  monday        String?
  tuesday       String?
  wednesday     String?
  thursday      String?
  friday        String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  entries       WeeklyPlanEntry[]
  shoppingList  ShoppingList?

  @@unique([userId, weekStartDate])
  @@index([userId])
}

model WeeklyPlanEntry {
  id           String    @id @default(cuid())
  weeklyPlan   WeeklyPlan @relation(fields: [weeklyPlanId], references: [id], onDelete: Cascade)
  weeklyPlanId String
  meal         Meal      @relation(fields: [mealId], references: [id], onDelete: Cascade)
  mealId       String
  day          Weekday
  servings     Int?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([weeklyPlanId, day])
  @@index([mealId])
}

model MealIngredient {
  id            String   @id @default(cuid())
  meal          Meal     @relation(fields: [mealId], references: [id], onDelete: Cascade)
  mealId        String
  position      Int
  name          String
  canonicalName String
  amount        Float?
  unit          String?
  note          String?
  optional      Boolean  @default(false)
  confidence    Float?
  needsReview   Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([mealId, position])
  @@index([canonicalName])
}

model ShoppingList {
  id            String             @id @default(cuid())
  userId        String
  weekStartDate DateTime
  weeklyPlan    WeeklyPlan?        @relation(fields: [weeklyPlanId], references: [id], onDelete: SetNull)
  weeklyPlanId  String?            @unique
  status        String             @default("READY")
  items         ShoppingListItem[]
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt

  @@unique([userId, weekStartDate])
  @@index([userId])
}

model ShoppingListItem {
  id             String       @id @default(cuid())
  shoppingList   ShoppingList @relation(fields: [shoppingListId], references: [id], onDelete: Cascade)
  shoppingListId String
  canonicalName  String
  displayName    String
  amount         Float?
  unit           String?
  isChecked      Boolean      @default(false)
  sourceMealIds  Json?
  sourceMealNames Json?
  unresolved     Boolean      @default(false)
  sortOrder      Int          @default(0)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([shoppingListId, sortOrder])
  @@index([canonicalName])
}

model UsageHistory {
  id            String   @id @default(cuid())
  meal          Meal     @relation(fields: [mealId], references: [id], onDelete: Cascade)
  mealId        String
  userId        String
  usedDate      DateTime @default(now())
  weekStartDate DateTime
  day           Weekday?
  createdAt     DateTime @default(now())

  @@index([userId, usedDate])
  @@index([mealId])
}

model MealHistory {
  id            String   @id @default(cuid())
  userId        String
  meal          Meal     @relation(fields: [mealId], references: [id], onDelete: Cascade)
  mealId        String
  weekStartDate DateTime
  dateAssigned  DateTime @default(now())

  @@index([userId, weekStartDate])
  @@index([userId, dateAssigned])
  @@index([mealId])
}

model MealDaySignal {
  id               String   @id @default(cuid())
  meal             Meal     @relation(fields: [mealId], references: [id], onDelete: Cascade)
  mealId           String
  userId           String
  day              Weekday
  shownCount       Int      @default(0)
  swappedAwayCount Int      @default(0)
  selectedCount    Int      @default(0)
  lastShownAt      DateTime?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([mealId, userId, day])
  @@index([userId, day])
  @@index([mealId])
}

model GeneratedDishImage {
  id                 String           @id @default(cuid())
  normalizedName     String           @unique
  canonicalName      String
  originalName       String
  imageUrl           String?
  generationPrompt   String?
  generationVersion  String           @default("v1")
  generationModel    String?
  status             GenerationStatus @default(PENDING)
  errorCode          String?
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt

  @@index([status])
}

model PlanShare {
  id        String   @id @default(cuid())
  ownerId   String   // The user who owns the plan (Clerk ID)
  viewerId  String   // The user who can view the plan (Clerk ID)
  status    String   @default("ACCEPTED") // For future use (PENDING/ACCEPTED)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([ownerId, viewerId])
  @@index([ownerId])
  @@index([viewerId])
}
